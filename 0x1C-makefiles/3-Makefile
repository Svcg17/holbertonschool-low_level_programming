#Build an executable: holberton with rules: all with variables: CC, SRC, OBJ, NAME
SRC_DIR = src
OBJ_DIR = obj
NAME = holberton
CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
RM = rm -f

all: $(OBJ) 
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean 

re: oclean all
